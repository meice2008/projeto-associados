@model AssociadoModel

@{
    ViewData["Title"] = "Cadastrar Associado";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro Associados</h1>
    </div>

    <form method="post" asp-controller="Associados" asp-action="Cadastrar">

        <div class="mb-3">

            <label for="Nome" class="form-label text-light">Nome: </label>
            <input type="text" class="form-control text-light" asp-for="Nome" id="Nome" placeholder="Nome do associado">
            <span asp-validation-for="Nome" class="text-danger"/>

        </div>

        <div class="mb-3">

            <label for="Cpf" class="form-label text-light">CPF: </label>
            <input type="text" class="form-control text-light" asp-for="Cpf" id="Cpf" placeholder="CPF do associado">
            <span asp-validation-for="Cpf" class="text-danger"/>

        </div>

        <div class="d-flex gap-5 nt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Associados" asp-action="Index">Voltar</a>
        </div>

        

    </form>

</div>

